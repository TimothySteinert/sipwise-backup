#!/bin/bash

# sipwise-backup CLI Application
# Version: 1.0.0

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Display banner
show_banner() {
    echo "======================================"
    echo "   sipwise-backup CLI v1.0.0"
    echo "======================================"
    echo ""
}

# Display help
show_help() {
    echo "Available commands:"
    echo "  exit       - Exit the application"
    echo "  help       - Show this help message"
    echo ""
}

# Main CLI loop
main() {
    show_banner
    show_help

    while true; do
        # Display prompt
        echo -n "sipwise-backup> "
        read -r command

        case "$command" in
            exit|quit)
                echo -e "${GREEN}Exiting sipwise-backup...${NC}"
                exit 0
                ;;
            help|h)
                show_help
                ;;
            "")
                # Empty input, just continue
                continue
                ;;
            *)
                echo -e "${RED}Unknown command: $command${NC}"
                echo "Type 'help' for available commands"
                ;;
        esac
    done
}

# Run main function
main
